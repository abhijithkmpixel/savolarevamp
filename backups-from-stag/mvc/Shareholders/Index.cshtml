@using Telerik.Sitefinity.Frontend.Mvc.Helpers
<div class="holder padding-bottom">
    <div class="search-process text-center padding-xl-bottom">
        <h4 class="search-headline h4 padding-bottom">@Html.Resource("PleaseUseTheFollowingFields"):</h4><div class="form-inline padding-bottom"><div class="row input-row"><div class="col-sm-3 col-sm-offset-2 input-col"><label class="sr-only" for="shareholder-first-name">@Html.Resource("FirstName")</label><input type="text" class="form-control" id="shareholder-first-name" placeholder="@Html.Resource("FirstName")"></div><div class="col-sm-3  input-col"><label class="sr-only" for="shareholder-father-name">@Html.Resource("FatherName")</label><input type="text" class="form-control" id="shareholder-father-name" placeholder="@Html.Resource("FatherName")"></div><div class="col-sm-3  input-col"><label class="sr-only" for="shareholder-family-name">@Html.Resource("FamilyName")</label><input type="text" class="form-control" id="shareholder-family-name" placeholder="@Html.Resource("FamilyName")"></div></div></div><h4 class="radio-headline text-uppercase">@Html.Resource("ContributionType"):</h4><div class="text-center radio-buttons padding-bottom"><ul><li><input id="radio3" name="shareholder-type" type="radio" class="radio" value="3" checked=""><label for="radio3">@Html.Resource("All")</label></li><li><input id="radio1" name="shareholder-type" type="radio" class="radio" value="1"><label class="radio_txt" for="radio1">@Html.Resource("Mehfaza")</label></li><li><input id="radio2" name="shareholder-type" type="radio" class="radio" value="2"><label for="radio2">@Html.Resource("Certificate")</label></li></ul></div><div class="row padding-bottom">
            <div class="col-sm-4 col-sm-offset-4 input-col">
                <label for="shareholder-number-filter" class="visually-hidden">@Html.Resource("ShareholderId")</label>
                <input type="text" class="form-control " data-number="@Html.Resource("CertificateId")" data-number-id="@Html.Resource("ShareholderId")" placeholder="@Html.Resource("ShareholderId")" id="shareholder-number-filter"><span id="number-validation-error">
                    @Html.Resource("InvalidNumber")
                </span>
            </div>
        </div><div class="form-inline padding-bottom" id="js-shareholder-type" style="display: none;"><div class="row input-row"><div class="col-sm-4 input-col"></div><div class="col-sm-4 input-col"></div><div class="col-sm-4 input-col"></div></div></div><button class="btn btn-default" id="js-shareholders-filter">@Html.Resource("Find")</button><span id="shareholder-form-validation">@Html.Resource("FormFieldsError")</span>
    </div><div class="table-responsive">
        <span id="emptyTableMsg" data-msg="@Html.Resource("EmptyTableMsg")"></span>
        <table class="table table-striped" id="shareholders-table" style="width: 100%;">
            <thead><tr><th>@Html.Resource("ShareholderNumber")</th><th>@Html.Resource("shareHolderIdNumber")</th><th>@Html.Resource("ShareholderName")</th><th>@Html.Resource("ContributionType")</th></tr></thead>
            <tbody></tbody>

        </table>
    </div>
</div>