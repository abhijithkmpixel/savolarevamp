@model SitefinityWebApp.Mvc.Models.GetInTouchViewModel
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
@using Telerik.Sitefinity.UI.MVC

<div class="top__footer">
    <div class="container">
        <div class="top__footer__inner">
            <p>@Html.Resource("FeelFreeToContact")</p>
            <a href="#" class="btn btn-default js-contact-show cta__primary cta__primary--light">@Html.Resource("GetInTouch")</a>
        </div>
    </div>
    <div class="container contact-section-details js-contact-details" style="display: none;">
        <h2 class="from-h1 page-section-title center h2">
            @Html.Resource("GetInTouch")
            <span class="link link-default js-contact-hide float-right body-xlarge icon-icon-x"></span>
        </h2><div class="row">
            <div class="col-md-7" data-mh="get-in-touch">
                <div class="row">
                    <div class="col-sm-6">
                        <ul class="list-unstyled list-with-icon">
                            <li class="padding-s-bottom">
                                <span class="icon-building color-green"></span>
                                @Model.Address
                            </li>
                            <li class="padding-s-bottom"><span class="icon-mail-alt color-green"></span><a href="mailto:@Model.ContactEmailAddress" class="link link-default">@Model.ContactEmailAddress</a></li>
                            @if (!string.IsNullOrWhiteSpace(Model.ContactPhoneNumber))
                            {
                                <li class="padding-s-bottom"><span class="icon-phone color-green"></span><a href="tel:@Model.ContactPhoneNumber.Replace(" ", "")" class="link link-default">&lrm;@Model.ContactPhoneNumber</a></li>
                            }
                            @if (!string.IsNullOrWhiteSpace(Model.ContactFax))
                            {
                                <li class="padding-s-bottom"><span class="icon-print color-green"></span><a href="fax:@Model.ContactFax.Replace(" ", "")" class="link link-default">&lrm;@Model.ContactFax</a></li>
                            }
                        </ul>
                    </div><div class="col-sm-6"><a target="_blank" rel="noopener" title="Opens in a new window" href="https://www.google.com/maps/place/Savola+Group+Tower-HQ/@Html.Raw("@")21.6023838,39.1083012,17z/data=!4m8!1m2!2m1!1ssavola+hq+tower!3m4!1s0x15c3dbab0f3815cd:0xa749be990006b800!8m2!3d21.6022082!4d39.1105023"><img class="img-responsive" src="//savola-web.azureedge.net/images/location.png" alt="savola office map"></a></div>
                </div>
            </div><div class="col-md-5" data-mh="get-in-touch">
                @using (Html.BeginFormSitefinity("", "get-in-touch", FormMethod.Post, new { id = "get-in-touch-form" }))
                {
                    <input type="hidden" name="Api" value="/api/contact" />
                    <input type="hidden" name="Culture" value="@System.Threading.Thread.CurrentThread.CurrentCulture.Name" />
                    <div class="form-group">
                        @Html.LabelFor(form => form.Name, Html.Resource("Name"), new { @class = "visually-hidden" })
                        @Html.TextBoxFor(form => form.Name, new { @class = "form-control", placeholder = Html.Resource("Name") })
                        @Html.ValidationMessageFor(form => form.Name)
                    </div><div class="form-group">
                        @Html.LabelFor(form => form.Email, Html.Resource("Email"), new { @class = "visually-hidden" })
                        @Html.TextBoxFor(form => form.Email, new
                    {
                       @class = "form-control",
                       placeholder = Html.Resource("Email"),
                       data_val_remote_url = "/api/validation/checkemail",
                       data_val_remote = Html.Resource("EmailIsInvalid"),
                       data_val_remote_additionalfields = "*.Email"
                    })
                        @Html.ValidationMessageFor(form => form.Email)
                    </div><div class="form-group">
                        @Html.LabelFor(form => form.PhoneNumber, Html.Resource("PhoneNumber"), new { @class = "visually-hidden" })
                        @Html.TextBoxFor(form => form.PhoneNumber, new { @class = "form-control", placeholder = Html.Resource("PhoneNumber") })
                        @Html.ValidationMessageFor(form => form.PhoneNumber)
                    </div><div class="form-group">

                        @Html.LabelFor(form => form.Message, Html.Resource("Message"), new { @class = "visually-hidden" })
                        @Html.TextAreaFor(form => form.Message, new { @class = "form-control", placeholder = Html.Resource("Message"), rows = "7" })
                        @Html.ValidationMessageFor(form => form.Message)
                    </div><button type="submit" class="btn btn-default">@Html.Resource("Submit")</button>
                }
                <div class="result-msg"></div>
            </div>
        </div>
    </div>
</div>
