@using Telerik.Sitefinity.Frontend.Mvc.Helpers;
@using Telerik.Sitefinity.Mvc;

<h4>@Html.Resource("BreadcrumbIncludeOptions")</h4>

<div class="form-group">
    <div class="row">
        <div class="col-xs-6">
            <label for="navTemplateName">@Html.Resource("Template")</label>

            <select id="navTemplateName" ng-model="properties.TemplateName.PropertyValue" class="form-control">
                @foreach (var viewName in Html.GetViewNames(((Telerik.Sitefinity.Mvc.Proxy.MvcProxyBase) Model).GetController(), @"Template\.(?<viewName>\w*)$"))
                {
                    <option value="@viewName"> @viewName.SplitCamelCase()</option>
                }
            </select>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-6">
            <label for="color">Color</label>

            <select id="color" ng-model="properties.Color.PropertyValue" class="form-control">
                <option value="yellow">Yellow</option>
                <option value="grey">Grey</option>
                <option value="blue">Blue</option>
                <option value="green">Green</option>
            </select>
        </div>
    </div>
</div>
<div class="form-group">
    <div class="row">
        <div class="col-xs-6">
            <label for="title">Title</label>
            <input type="text" id="title" ng-model="properties.Title.PropertyValue" class="form-control" />
        </div>
    </div>
</div>

<div class="form-group" ng-show="properties.TemplateName.PropertyValue=='WithText'">
    <div class="row">
        <div class="col-xs-12">
            <label>Description</label>
            <sf-html-field class="kendo-content-block" sf-model="properties.Description.PropertyValue"
                           
               sf-images-settings="@SettingsHelpers.GetMediaSettings("Image")"
               sf-videos-settings="@SettingsHelpers.GetMediaSettings("Video")"
               sf-documents-settings="@SettingsHelpers.GetMediaSettings("Document")"></sf-html-field>
        </div>
    </div>
</div>
<div class="form-group" ng-show="properties.TemplateName.PropertyValue=='WithText'">
    <div class="row">
        <div class="col-xs-6">
            <label for="buttonText">Button text</label>
            <input type="text" id="buttonText" ng-model="properties.ButtonText.PropertyValue" class="form-control" />
        </div>
    </div>
</div>
<div class="form-group" ng-show="properties.TemplateName.PropertyValue=='WithText'">
    <div class="row">
        <div class="col-xs-6">
            <label for="url">Button url</label>
            <input type="text" id="url" ng-model="properties.ButtonUrl.PropertyValue" class="form-control" />
        </div>
    </div>
</div>
<div class="form-group">
    <label for="image-field" class="m-top-sm">@Html.Resource("Image")</label>
    <sf-image-field class="sf-Media--info modal-settings modal-settings-space"
                    sf-model="properties.ImageId.PropertyValue"
                    sf-image="selectedImage"
                    sf-media-settings="@SettingsHelpers.GetMediaSettings("Image")"
                    sf-provider=""
                    id="image-field"></sf-image-field>
</div>