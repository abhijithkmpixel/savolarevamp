@using Prototype.Sitefinity.SitefinityControllers
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
@model Telerik.Sitefinity.Frontend.Navigation.Mvc.Models.INavigationModel
<div class="quickLinks">
    <ul class="quickLinks-list">
        @foreach (var node in Model.Nodes)
        {
            <li class="quickLinks-listItem">
                <span class="quickLinks-title">@node.Title</span>
                <a class="quickLinks-link" href="@node.Url" target="@node.LinkTarget">
                    <span class="quickLinks-linkTitle">@Html.Resource("LearnMore")</span>
                    <svg class="quickLinks-linkIcon" xmlns="http://www.w3.org/2000/svg" width="38" height="38" fill="none">
                        <rect width="38" height="38" fill="#63C5B7" rx="19" />
                        <path stroke="#fff" stroke-linecap="round" stroke-linejoin="round" stroke-width="2" d="M21.283 12 28 19l-6.717 7" />
                        <path stroke="#fff" stroke-linecap="round" stroke-width="2" d="M26.732 19.032H10.999" />
                    </svg>
                </a>
            </li>
        }
    </ul>
</div>