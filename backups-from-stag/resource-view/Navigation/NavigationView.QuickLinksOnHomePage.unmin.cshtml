@using Prototype.Sitefinity.SitefinityControllers
@using Telerik.Sitefinity.Frontend.Mvc.Helpers
@model Telerik.Sitefinity.Frontend.Navigation.Mvc.Models.INavigationModel
<h1 class="text-left">@Html.Resource("QuickLinks")</h1>
<div class="quick-links">
    <ul>
        @foreach (var node in Model.Nodes)
            {
            <li>
                <a href="@node.Url" target="@node.LinkTarget" class="link link-grey">@node.Title 
                    <span class="icon-angle-circled-@(CultureController.IsRtl? "left": "right") color-green"></span></a>
            </li>
        }
    </ul>
</div>